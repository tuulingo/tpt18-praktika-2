<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="Snake Game" KeyDown="Window_KeyDown_1" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Name="lblSnakeDirection" FontWeight="Bold"></Label>
        </StackPanel>
        <Canvas Name="board" Background="LightGreen" Height="480" Width="480">
        </Canvas>
        <Canvas>
            <Rectangle Name="snakeShape" Height="30" Width="30" Fill="Black" Stroke="Purple" StrokeThickness="4 
                       " Panel.ZIndex="10" Canvas.Left="0" Canvas.Top="0" ></Rectangle>
        </Canvas>
    </Grid>
</Window>
